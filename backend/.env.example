# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key  # Use service_role key for backend
SUPABASE_ANON_KEY=your-anon-key     # For auth endpoints

# Storage Mode
USE_SUPABASE=false  # Set to true for production (Supabase), false for dev (in-memory)

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# MCP Mode (for AI clients)
MCP_MODE=false  # Set to true to run as MCP server

# For testing
# ContextHub API Key
CONTEXTHUB_API_KEY=sk_prod_your_api_key_here

# Third-party API Keys (for integration tests)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Testing Configuration
NGROK_URL=https://your-ngrok-url.ngrok-free.app  # Optional: for remote testing
